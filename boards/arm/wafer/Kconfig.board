# Copyright (c) 2020 The ZMK Contributors
# SPDX-License-Identifier: MIT

choice
    prompt "Wafer Keyboard"
    depends on SOC_SERIES_NRF52X

config BOARD_WAFER_LEFT
    bool "Wafer (Left)"
    select SOC_NRF52840_QIAA
        imply RETAINED_MEM
        imply RETENTION
        imply RETENTION_BOOT_MODE
        help
            Enable support for the board using the nRF52840 SoC.

config BOARD_WAFER_RIGHT
    bool "Wafer (Right)"
    select SOC_NRF52840_QIAA
        imply RETAINED_MEM
        imply RETENTION
        imply RETENTION_BOOT_MODE
        help
            Enable support for the board using the nRF52840 SoC.

endchoice